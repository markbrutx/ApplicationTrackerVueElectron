{
  "name": "applyelectron",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop app that gamifies job applications with progress tracking, achievement streaks, and template generation. Built with Vue + Electron.",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "vite",
    "dev": "concurrently \"cross-env NODE_ENV=development vite --port 0\" \"wait-on http-get://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^10.7.2",
    "better-sqlite3": "^11.6.0",
    "chart.js": "^4.4.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-store": "^8.1.0",
    "firebase": "^11.0.2",
    "vue": "^3.4.15",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.2.5",
    "vuetify": "^3.5.1",
    "vuex": "^4.0.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "http-server": "^14.1.1",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.jobtracker.app",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ]
  }
}
